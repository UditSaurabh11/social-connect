# Server Configuration
PORT=3001
NODE_ENV=development
JWT_SECRET=your_jwt_secret_here

# Frontend URL
FRONTEND_URL=http://localhost:5173

# YouTube OAuth (Google Cloud Console)
YOUTUBE_CLIENT_ID=your_youtube_client_id_here
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret_here

# Twitter OAuth 2.0 (Twitter Developer Portal)
TWITTER_CLIENT_ID=your_twitter_client_id_here
TWITTER_CLIENT_SECRET=your_twitter_client_secret_here

# LinkedIn OAuth (LinkedIn Developer Portal)
LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here

# Facebook/Instagram OAuth (Facebook Developers)
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here

# Database (Optional - for storing user data)
DATABASE_URL=postgresql://username:password@localhost:5432/socialmedia